<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Games</h1>
    <%= link_to "New Game", new_game_path, class: "btn btn-primary" %>
  </div>

  <% if @games.any? %>
    <table class="table table-striped table-bordered">
      <thead class="table-light">
        <tr>
          <th><%= "Game" %></th>
          <th><%= "Teams" %></th>
          <th><%= "Winner" %></th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td>
              <% # Find the associated player(s) from the rankings table %>
              <% game.rankings.each do |ranking| %>
                <%= "#{ranking.player.first_name} #{ranking.player.last_name}" %>
              <% end %>
            </td>
            <td><%=%></td>
            <td><%= link_to "Show", game, class: "btn btn-outline-secondary btn-sm" %></td>
            <td><%= link_to "Edit", edit_game_path(game), class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to "Delete", game, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted text-center"><%= "No Games Found" %></p>
  <% end %>
</div>
