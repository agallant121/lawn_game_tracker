<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><%= "Players" %></h1>
    <%= link_to "New Player", new_player_path, class: "btn btn-success" %>
  </div>

  <% if @players.any? %>
    <div class="list-group">
      <% @players.each do |player| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to player.name, player_path(player), class: "list-group-item-action" %>
          <%= form_with(model: player, method: :delete, data: { confirm: "Are you sure?" }, class: "inline-form") do |form| %>
            <%= form.submit "Delete", class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted"><%= "No players yet." %></p>
  <% end %>
</div>
