<div class="container mt-5">
  <h1 class="mb-4">Player: <%= @player.name %></h1>

  <ul class="list-group mb-4">
    <li class="list-group-item"><strong><%= "Name" %>:</strong> <%= @player.name %></li>
  </ul>

  <div class="d-flex gap-2">
    <%= link_to "Edit", edit_player_path(@player), class: "btn btn-warning" %>
    <%= link_to "Back", players_path, class: "btn btn-secondary" %>
  </div>
</div>
